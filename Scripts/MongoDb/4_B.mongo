db.posts.aggregate([ { $match: { _id: { $gt: 20000000 } } }, { $lookup: { from: "postTypes", localField: "PostTypeId", foreignField: "_id", as: "postType" } }, { $unwind: "$postType" }, { $lookup: { from: "users", localField: "OwnerUserId", foreignField: "_id", as: "owner" } }, { $unwind: "$owner" }, { $project: { Title: 1, Type: "$postType.Type", DisplayName: "$owner.DisplayName" } } ]);